<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset
        name="sef"
        label="COM_JCAR_CONFIG_SEFGENERATION_LABEL"
        description="COM_JCAR_CONFIG_SEFGENERATION_DESC"
        addfieldpath="administrator/components/com_jcar/models/fields">
        <field
            name="sef_generate"
            type="radio"
            default="0"
            label="COM_JCAR_CONFIG_SEFGENERATION_GENERATE_LABEL"
            description="COM_JCAR_CONFIG_SEFGENERATION_GENERATE_DESC"
            class="btn-group">
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
            name="menutype"
            type="jcar.menu"
            label="COM_JCAR_CONFIG_SEFGENERATION_MENUTYPE_LABEL"
            description="COM_JCAR_CONFIG_SEFGENERATION_MENUTYPE_DESC"
            size="1"
            default="mainmenu"/>
        <field
            name="parent_id"
            type="jcar.menuparent"
            label="COM_JCAR_CONFIG_SEFGENERATION_PARENTID_LABEL"
            description="COM_JCAR_CONFIG_SEFGENERATION_PARENTID_DESC"
            default="1"
            filter="int"
            size="1">
            <option value="1">COM_JCAR_CONFIG_SEFGENERATION_PARENTID_ROOT</option>
        </field>
    </fieldset>
    <fieldset
        name="assets"
        label="COM_JCAR_CONFIG_ASSETS_LABEL"
        description="COM_JCAR_CONFIG_ASSETS_DESC">
        <field
            name="inline_max_length"
            type="text"
            default="1000000"
            label="COM_JCAR_CONFIG_ASSETS_INLINE_MAX_LENGTH_LABEL"
            description="COM_JCAR_CONFIG_ASSETS_INLINE_MAX_LENGTH_DESC"/>
        <field
            name="inline_mimetypes"
            type="text"
            label="COM_JCAR_CONFIG_ASSETS_INLINE_MIMETYPES_LABEL"
            description="COM_JCAR_CONFIG_ASSETS_INLINE_MIMETYPES_DESC"
            default="application/pdf"/>
    </fieldset>
</config>
